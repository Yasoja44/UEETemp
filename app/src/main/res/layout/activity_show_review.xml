<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ShowReview">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_view"
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginStart="-50dp"
                android:src="@drawable/back_left" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="189dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:src="@drawable/store_logo" />

            <ImageView
                android:id="@+id/select_product_image"
                android:layout_width="341dp"
                android:layout_height="154dp"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_launcher_foreground"
                android:padding="@android:dimen/app_icon_size"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <RatingBar
                android:id="@+id/ratingBar5"
                style="?android:attr/ratingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_product_image"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="7dp"
                android:clickable="false"
                android:progressTint="#FF5722" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_below="@+id/select_product_image"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="23dp"
                android:text="3.0"
                android:textColor="#FC1313"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ratingBar5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Leather Bag"
                android:textColor="#FC1313"
                android:textSize="29dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="392dp"
                android:layout_height="235dp"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"></androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/popButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="529dp"
                android:layout_marginEnd="25dp"

                android:onClick="onClick"
                android:src="@drawable/ic_baseline_add_24"
                app:backgroundTint="#273CAF" />


        </RelativeLayout>


    </LinearLayout>


</ScrollView>