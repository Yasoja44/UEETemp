<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowReview">
    <RelativeLayout  android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <ImageView
            android:id="@+id/back_view"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginStart="-50dp"
            android:src="@drawable/back_left"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/store_logo" />

        <ImageView
            android:id="@+id/select_product_image"
            android:layout_width="300dp"
            android:layout_height="182dp"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_launcher_foreground"
            android:padding="@android:dimen/app_icon_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <RatingBar
            android:id="@+id/ratingBar5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_product_image"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:progressTint="#FF5722"
            style="?android:attr/ratingBarStyleIndicator"
            android:clickable="false" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_product_image"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="20dp"
            android:text="3.0"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="#FC1313"/>


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ratingBar5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Product Name"
            android:textColor="#FC1313"
            android:textSize="27dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="395dp"
            android:layout_height="291dp"
            android:layout_below="@+id/textView5"
            android:layout_marginStart="8dp"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="8dp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"></androidx.recyclerview.widget.RecyclerView>





    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/popButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="end|bottom"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            android:onClick="onClick"
            android:src="@drawable/ic_baseline_add_24"
            app:backgroundTint="@color/design_default_color_primary_variant"
            app:fabSize="mini"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    </RelativeLayout>

</ScrollView>